<div class="page-header">
  <h1><b><%= @dog.name %></b></h1>
</div>

<div class="jumbotron">
  <div class="well well-sm">
    <h3>Age: </h3>
    <p><%= @dog.age %></p>
    <h3>Breed(s): </h3>
    <% @dog.breeds.each do |breed|%>
      <p><%= breed.name %></p>
    <% end %>

    <% if @dog.user_id == Helpers.current_user(session).id %>
      <a href="/dogs/<%= @dog.id %>/edit" class="btn btn-primary btn-sm">Edit details <span class="glyphicon glyphicon-pencil"> </span> </a>
      <br></br>

      <form action="/dogs/<%= @dog.id %>/delete" method="post">
        <input type="hidden" id="hidden" name="_method" value="delete">
        <button type="submit" class="btn btn-primary btn-sm" name="button">Remove dog <span class="glyphicon glyphicon-trash"> </span></button>
      </form>

    <% else %>
      <h3>Contact:</h3>
      <p><%= @dog.user.username %> - <a href="mailto:<%= @dog.user.email %>"><%= @dog.user.email %></a></p>
    <% end %>
  </div>

    <a href="/dogs" class="btn btn-primary">View all available dogs <span class="glyphicon glyphicon"> </span> </a>
    <br></br>

    <a href="/logout" class="btn btn-warning">Log out</a>
</div>
